{
    "name": "travelopia/wordpress-blade",
    "description": "Use Laravel Blade components in WordPress.",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "authors": [
      {
        "name": "Travelopia",
        "homepage": "https://www.travelopia.com"
      }
    ],
    "bin" : ["bin/wordpress-blade"],
    "require": {
        "illuminate/view": "^v10.48.20"
    },
    "require-dev": {
        "travelopia/wordpress-coding-standards": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs"
    }
}
